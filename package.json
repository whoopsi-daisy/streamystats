{
  "name": "streamystats",
  "version": "2.15.0",
  "description": "StreamyStats - Jellyfin analytics platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run dev:all",
    "build": "bun run build:all",
    "start": "bun run start:all",
    "dev:job-server": "cd apps/job-server && bun --env-file=../../.env run --watch src/index.ts",
    "dev:nextjs": "cd apps/nextjs-app && bun run dev",
    "dev:all": "bun run dev:job-server & bun run dev:nextjs",
    "start:job-server": "cd apps/job-server && bun run start",
    "start:nextjs": "cd apps/nextjs-app && bun run start",
    "start:all": "bun run start:job-server & bun run start:nextjs",
    "build:database": "cd packages/database && bun run build",
    "build:nextjs": "cd apps/nextjs-app && bun run build --experimental-build-mode compile",
    "build:all": "bun run build:database && bun run build:nextjs",
    "docker:build": "./build-and-push.sh",
    "db:generate": "cd packages/database && bun run db:generate",
    "db:migrate": "cd packages/database && bun run db:migrate",
    "db:studio": "cd packages/database && bun run db:studio",
    "lint": "cd apps/nextjs-app && bun run lint",
    "lint:fix": "cd apps/nextjs-app && bun run lint:fix",
    "format": "cd apps/nextjs-app && bun run format",
    "format:fix": "cd apps/nextjs-app && bun run format:fix",
    "typecheck": "bun run typecheck:nextjs && bun run typecheck:job-server",
    "typecheck:nextjs": "cd apps/nextjs-app && bun run typecheck",
    "typecheck:job-server": "cd apps/job-server && bun run typecheck",
    "install:bun": "bun install"
  },
  "keywords": [
    "jellyfin",
    "analytics",
    "typescript",
    "nextjs",
    "postgres",
    "drizzle"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "drizzle-orm": "0.45.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "trustedDependencies": [
    "sharp",
    "esbuild",
    "@biomejs/biome"
  ]
}